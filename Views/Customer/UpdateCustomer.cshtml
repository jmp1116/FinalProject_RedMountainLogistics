@model Customer

<h2>Update @Model.CompanyName</h2>

@using (Html.BeginForm("UpdateCustomerToDatabase", "Customer", "Post"))
{
    <input asp-for="CustomerID" type="hidden" value="@Model.CustomerID" />

    <label asp-for="CompanyName" class="control-label">Company Name</label>

    <input type="text" name="CompanyName" class="form-control" value="@Model.CompanyName" />

    <label asp-for="Credit" class="control-label">Credit</label>

    <input type="number" step="0.01" name="Credit" class="form-control" value="@Model.Credit" />

    <label asp-for="MoneySpent" class="control-label">Money Spent</label>

    <input type="number" step="0.01" name="MoneySpent" class="form-control" value="@Model.MoneySpent" />

    <label asp-for="PhoneNumber" class="control-label">Phone Number</label>

    <input type="text" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />

    <label asp-for="CustomerEmail" class="control-label">Email</label>

    <input type="text" name="CustomerEmail" class="form-control" value="@Model.CustomerEmail" />
    <br/>

    <input type="submit" value="Update Customer" class="btn btn-primary" />

}

@model Employee

<h3>@Model.FirstName @Model.LastName</h3>

<table class="table">
    <tr>
        <th>Employee ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Password</th>
        <th>Sales</th>
    </tr>
    <tr>
        <td>@Model.EmployeeID</td>
        <td>@Model.FirstName</td>
        <td>@Model.LastName</td>
        <td>@Model.Email</td>
        <td>@Model.Password</td>
        <td>@Model.Sales</td>
    </tr>

</table>

<div style="display: block">
    <a href="/Employee/UpdateEmployee/@Model.EmployeeID">Update this Employee</a>
</div>
<br />
<div style="display: block">
    @using (Html.BeginForm("DeleteEmployee", "Employee", "Post"))
    {
        <input type="hidden" asp-for="EmployeeID" value="@Model.EmployeeID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this employee" />
    }
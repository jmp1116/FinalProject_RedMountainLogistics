@model IEnumerable<Employee>



<div style="display: block">
   <a href="/Employee/InsertEmployee/">Create a New Employee</a>
</div>

<form method="get" asp-action="Index">
    <p>
        <input class="form-control bg-white border-0 small" type="search" placeholder="Enter Employee's Last Name..." value="@ViewData[" GetCustomerDetails"]" name="empSearch" style="width:500px;" />
        <input type="submit" value="Search" class="btn btn-primary" />
        <a asp-action="Index">Get All Employees</a>
    </p>
</form>

<h2>Employees</h2>
<table class="table">
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Password</th>
        <th>Sales</th>
    </tr>

    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.EmployeeID</td>
            <td>@employee.FirstName</td>
            <td>@employee.LastName</td>
            <td>@employee.Email</td>
            <td>@employee.Password</td>
            <td>@employee.Sales</td>
            <td><a href=/Employee/ViewEmployee/@employee.EmployeeID>Edit</a></td>

        </tr>

    }
</table>

